@model CARS.Models.VehiculeType

@{
    ViewData["Title"] = "Upsert";
}

<h1>@(Model.Id == 0 ? "Create":"Edit")</h1>

<h4>VehiculeType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        
        <form method="post" action="/VehiculeType/UpdateCreate">
            @if (Model.Id != 0)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">@(Model != null ? Model.Name : "")</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@(Model.Id != 0 ? "Update" : "Create")</button>
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

